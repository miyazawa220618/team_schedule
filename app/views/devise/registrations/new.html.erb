<%= render "shared/header"%>
<main class="login">
  <h4 class="ttl f-en">Welcome to Team Schedule!</h4>
  <div class="wrapper register">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <p class="_required">ニックネーム</p><br />
        <%= f.text_field :nickname, autofocus: true, class: "text_field" %>
      </div>

      <div class="field">
        <p class="_required">メールアドレス</p><br />
        <%= f.email_field :email, autocomplete: "email", class: "text_field" %>
      </div>

      <div class="field">
        <p class="_required">パスワード</p>
        <% if @minimum_password_length %>
        <em>　　　(<%= @minimum_password_length %>文字以上・半角英数字の組合せ)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "text_field" %>
      </div>

      <div class="field">
        <p class="_required">パスワード（確認用）</p><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text_field" %>
      </div>

      <div class="field">
        <p class="_required">役職を選択する</p><br />
        <div class="form-list">
          <%= f.collection_select(:work_id, Work.all, :id, :name, {}, {class:"text_field", id:"work-list"}) %>
        </div>
      </div>

      <div class="field">
        <p class="_any">プロフィールを書く</p><br />
        <%= f.text_area :profile_text, class: "text_field _profile" %>
      </div>

      <div class="field">
        <p class="_any">プロフィール画像</p><br />
        <%= f.file_field :profile_image, id:"profile-image" %>
      </div>

      <div class="btn2 actions">
        <%= f.submit "上記の内容で登録する" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</main>
<%= render "shared/footer"%>
