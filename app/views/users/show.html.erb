<%= render "shared/header"%>
<main class="_mypage wrapper">
<%= link_to "戻る", request.referer, class: "return_link mypage_btn" %>
  <div class="profile_box">
    <div class="profile_img">
      <%= image_tag @user.profile_image if @user.profile_image.attached? %>
    </div>
    <section>
      <h3><%= @user.nickname %>さん <span id="my_work"><%= @user.work.name %></span></h3>
      <ul>
        <li><%= link_to '編集', edit_user_registration_path %></li>
      </ul>
      <p>
      <% if @user.profile_text.present? %>
        <%= safe_join(@user.profile_text.split("\n"),tag(:br)) %>
      <% else %>
        ...
      <% end %>
      </p>
    </section>
  </div>

  <p class="profile_txt">連絡先：<%= @user.email %></p>

  <div class="my_state">
    <ul class="slider">
      <li>
        <h4 class="f-en"><%= @day1.strftime("%-m/%-d(#{@dat_week[@day1.wday]})") %></h4>
        <div class="average_box">
          <div class="average"><div class="_fill"></div></div>
          <p class="f-en average_rate"><%= (@hour1/8*100).round(1) %></p>
        </div>
        <ul class="share_mylist">
          <% @share1.each do |share| %>
          <li>・<%= share.schedule.project.name %>：<%= share.schedule.title %>（<%= share.hour.name %>）</li>
          <% end %>
        </ul>
      </li>
      <li>
        <h4 class="f-en"><%= @day2.strftime("%-m/%-d(#{@dat_week[@day2.wday]})") %></h4>
